<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>

  <%= simple_form_for [@studio, @course] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>

  <% @categories.each do |category| %>
  <%= check_box_tag "course[category_ids][]", category.id, true %>
  <%= category.name%>
  <% end %>

  <%= f.button :submit %>

 <% end %>




